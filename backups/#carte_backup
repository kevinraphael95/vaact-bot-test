# ğŸ“ ygo/carte.py â€” Commande !carte
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Ce module permet de rechercher et afficher les dÃ©tails dâ€™une carte Yu-Gi-Oh!
# en utilisant lâ€™API YGOPRODeck (en franÃ§ais).
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ“¦ IMPORTS
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
import discord                            # ğŸ“¦ Outils de crÃ©ation d'embeds pour Discord
from discord.ext import commands          # ğŸ§© Pour les commandes du bot
import aiohttp                            # ğŸŒ RequÃªtes HTTP asynchrones
import urllib.parse                       # ğŸ”  Encodage URL pour les noms de cartes

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ§  COG : Carte
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
class Carte(commands.Cog):
    """
    ğŸ” Cog contenant la commande !carte permettant de chercher une carte
    Yu-Gi-Oh! en langue franÃ§aise via l'API YGOPRODeck.
    """

    def __init__(self, bot: commands.Bot):
        self.bot = bot  # ğŸ”Œ Stocke lâ€™instance du bot

    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    # ğŸ”¹ COMMANDE : !carte / !card
    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    @commands.command(
        name="carte",
        aliases=["card"],
        help="ğŸ“„ Affiche les infos dâ€™une carte Yu-Gi-Oh! en franÃ§ais."
    )
    async def carte(self, ctx: commands.Context, *, nom: str):
        """
        ğŸ§  Commande !carte <nom>
        Recherche une carte Yu-Gi-Oh! par son nom (exact), et affiche ses infos.
        """

        # 1ï¸âƒ£ Encodage du nom de la carte pour lâ€™URL (ex : "Dragon Blanc" â†’ "Dragon%20Blanc")
        nom_encode = urllib.parse.quote(nom)

        # 2ï¸âƒ£ Construction de lâ€™URL vers lâ€™API YGOPRODeck (langue = fr)
        url = f"https://db.ygoprodeck.com/api/v7/cardinfo.php?name={nom_encode}&language=fr"

        try:
            # 3ï¸âƒ£ Envoi de la requÃªte asynchrone Ã  lâ€™API
            async with aiohttp.ClientSession() as session:
                async with session.get(url) as resp:
                    # âŒ Si lâ€™API ne rÃ©pond pas correctement
                    if resp.status != 200:
                        await ctx.send("ğŸš¨ Erreur : Impossible de rÃ©cupÃ©rer les donnÃ©es depuis lâ€™API.")
                        return
                    data = await resp.json()

            # 4ï¸âƒ£ VÃ©rifie si la carte existe dans les donnÃ©es retournÃ©es
            if "data" not in data:
                await ctx.send("âŒ Carte introuvable. VÃ©rifie lâ€™orthographe exacte.")
                return

            # 5ï¸âƒ£ RÃ©cupÃ¨re la premiÃ¨re carte trouvÃ©e dans le rÃ©sultat
            carte = data["data"][0]

            # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
            # ğŸ¨ CRÃ‰ATION DE L'EMBED â€” Informations de la carte
            # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
            embed = discord.Embed(
                title=carte.get("name", "Carte inconnue"),  # ğŸ”  Nom de la carte
                description=carte.get("desc", "Pas de description disponible."),  # ğŸ“œ Texte d'effet
                color=discord.Color.red()  # ğŸ¨ Couleur thÃ©matique Yu-Gi-Oh!
            )

            # ğŸ”¬ Type gÃ©nÃ©ral (Magie, Monstre, PiÃ¨ge, etc.)
            embed.add_field(name="ğŸ§ª Type", value=carte.get("type", "?"), inline=True)

            # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
            # ğŸ§Ÿ SI Câ€™EST UN MONSTRE : Ajouter ATK/DEF/Niveau/Attribut/Race
            # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
            if carte.get("type", "").lower().startswith("monstre"):
                atk = carte.get("atk", "?")
                defe = carte.get("def", "?")
                level = carte.get("level", "?")
                attr = carte.get("attribute", "?")
                race = carte.get("race", "?")

                embed.add_field(name="âš”ï¸ ATK / DEF", value=f"{atk} / {defe}", inline=True)
                embed.add_field(name="â­ Niveau / Rang", value=str(level), inline=True)
                embed.add_field(name="ğŸŒªï¸ Attribut", value=attr, inline=True)
                embed.add_field(name="ğŸ‘¹ Race", value=race, inline=True)

            # ğŸ–¼ï¸ Image de la carte
            embed.set_thumbnail(url=carte["card_images"][0]["image_url"])

            # ğŸ“¤ Envoi du message embed dans le salon
            await ctx.send(embed=embed)

        except Exception as e:
            print(f"[ERREUR CARTE] {e}")
            await ctx.send("ğŸ’¥ Une erreur est survenue lors de la recherche de la carte.")

    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    # ğŸ·ï¸ CATÃ‰GORIE personnalisÃ©e pour !help
    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    def cog_load(self):
        self.carte.category = "ğŸƒ Yu-Gi-Oh!"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# âš™ï¸ SETUP DU COG
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
async def setup(bot: commands.Bot):
    """
    ğŸ” Fonction appelÃ©e lors du chargement du cog.
    Elle ajoute le cog et dÃ©finit une catÃ©gorie visible dans !help.
    """
    cog = Carte(bot)

    # ğŸ—‚ï¸ Ajout d'une catÃ©gorie Ã  toutes les commandes du cog
    for command in cog.get_commands():
        command.category = "ğŸƒ Yu-Gi-Oh!"

    await bot.add_cog(cog)
    print("âœ… Cog chargÃ© : Carte (catÃ©gorie = ğŸƒ Yu-Gi-Oh!)")
