# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
import discord                            # ğŸ“¦ API Discord
from discord.ext import commands          # ğŸ§© Extension commandes
import json                               # ğŸ“„ Chargement du fichier JSON
import os                                 # ğŸ“ Manipulation de fichiers
import asyncio                            # â±ï¸ Gestion des dÃ©lais pour la pagination

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ”§ COG : ArchetypeCommand
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
class ArchetypeCommand(commands.Cog):
    """
    ğŸƒ Commandes liÃ©es aux archÃ©types Yu-Gi-Oh.
    Permet dâ€™afficher tous les archÃ©types ou la description dâ€™un en particulier.
    """

    def __init__(self, bot: commands.Bot):
        self.bot = bot                                      # ğŸ”Œ Instance du bot
        self.data_file = "data/archetypes.json"             # ğŸ“ Chemin du fichier JSON
        self.archetypes = self.load_archetypes()            # ğŸ“¥ Chargement des donnÃ©es Ã  lâ€™init

    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    # ğŸ“¥ Chargement des archÃ©types depuis le fichier JSON
    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    def load_archetypes(self):
        if not os.path.exists(self.data_file):
            return {}  # ğŸš« Fichier inexistant
        with open(self.data_file, "r", encoding="utf-8") as f:
            return json.load(f)

    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    # ğŸ”¹ COMMANDE : !archetype / !archÃ©type / !arch
    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    @commands.command(
        name="archetype",
        aliases=["archÃ©type", "arch"],
        help="ğŸ“š Affiche la liste des archÃ©types ou les dÃ©tails dâ€™un archÃ©type."
    )
    @commands.cooldown(rate=1, per=5, type=commands.BucketType.user)  # ğŸ§Š Cooldown anti-spam
    async def archetype(self, ctx: commands.Context, *args):
        """
        ğŸ“˜ Affiche la liste des archÃ©types (paginÃ©e) ou les dÃ©tails dâ€™un archÃ©type donnÃ©.
        """

        # ğŸ” Aucun archÃ©type chargÃ©
        if not self.archetypes:
            return await ctx.send("âš ï¸ Aucun archÃ©type nâ€™a Ã©tÃ© chargÃ©.")

        # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        # ğŸ” RECHERCHE Dâ€™UN ARCHÃ‰TYPE PRÃ‰CIS
        # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        if args:
            query = " ".join(args).lower()
            found = None
            for name, info in self.archetypes.items():
                if query in name.lower():
                    found = (name, info)
                    break

            if found:
                embed = discord.Embed(
                    title=f"ğŸ“˜ ArchÃ©type : {found[0]}",
                    description=found[1].get("description", "Aucune description disponible."),
                    color=discord.Color.blue()
                )
                return await ctx.send(embed=embed)
            else:
                return await ctx.send("âŒ ArchÃ©type non trouvÃ©.")

        # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        # ğŸ“„ AFFICHAGE DE TOUS LES ARCHÃ‰TYPES (PAGINATION)
        # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        pages = []
        archetype_names = sorted(self.archetypes.keys())  # ğŸ”  Tri alphabÃ©tique
        chunk_size = 5  # ğŸ“„ 5 noms par page

        # ğŸ” CrÃ©ation des pages
        for i in range(0, len(archetype_names), chunk_size):
            chunk = archetype_names[i:i + chunk_size]
            desc = "\n".join([f"â€¢ **{name}**" for name in chunk])
            embed = discord.Embed(
                title=f"ğŸ“š ArchÃ©types ({i + 1}-{min(i + chunk_size, len(archetype_names))} sur {len(archetype_names)})",
                description=desc,
                color=discord.Color.green()
            )
            pages.append(embed)

        # âª Affiche la premiÃ¨re page
        current = 0
        message = await ctx.send(embed=pages[current])

        # âŒ Pas besoin de pagination si une seule page
        if len(pages) <= 1:
            return

        # â¬…ï¸â¡ï¸ Ajout des rÃ©actions de navigation
        await message.add_reaction("â¬…ï¸")
        await message.add_reaction("â¡ï¸")

        # âœ… Fonction de vÃ©rification des rÃ©actions utilisateur
        def check(reaction, user):
            return (
                user == ctx.author and 
                str(reaction.emoji) in ["â¬…ï¸", "â¡ï¸"] and 
                reaction.message.id == message.id
            )

        # ğŸ”„ Boucle de pagination (timeout : 60s)
        while True:
            try:
                reaction, user = await self.bot.wait_for("reaction_add", timeout=60.0, check=check)
                await message.remove_reaction(reaction.emoji, user)

                if str(reaction.emoji) == "â¡ï¸" and current < len(pages) - 1:
                    current += 1
                    await message.edit(embed=pages[current])
                elif str(reaction.emoji) == "â¬…ï¸" and current > 0:
                    current -= 1
                    await message.edit(embed=pages[current])
            except asyncio.TimeoutError:
                break  # âŒ› Fin de la pagination aprÃ¨s 60 secondes

    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    # ğŸ·ï¸ CATEGORISATION dans le !help
    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    def cog_load(self):
        self.archetype.category = "ğŸƒ Yu-Gi-Oh!"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# âš™ï¸ SETUP DU COG
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
async def setup(bot: commands.Bot):
    """
    ğŸ” Ajoute ce cog au bot au dÃ©marrage.
    Associe aussi la catÃ©gorie personnalisÃ©e "ğŸƒ Yu-Gi-Oh!" pour !help.
    """
    cog = ArchetypeCommand(bot)

    for command in cog.get_commands():
        command.category = "ğŸƒ Yu-Gi-Oh!"

    await bot.add_cog(cog)
    print("âœ… Cog chargÃ© : ArchetypeCommand (catÃ©gorie = ğŸƒ Yu-Gi-Oh!)")
