{


  # TERMES GENERIQUES
  
  "Invocation": {
    "definition": "Action de faire apparaître une carte sur le terrain.",
    "synonymes": ["Summon"]
  },
  "Deck": "Le paquet de cartes que le joueur utilise pour jouer.",
  "Cimetière": {
    "definition": "Zone où vont les cartes une fois utilisées ou détruites.",
    "synonymes": ["Graveyard"]
  },
  "Effet": "Capacité spéciale d'une carte qui peut influencer la partie.",
  "Tour": "Unité de jeu comprenant la phase de pioche, de main, de bataille, etc.",
  "Monstre": {
    "definition": "Carte utilisée pour attaquer ou défendre.",
    "synonymes": ["Créature"]
  },
  "Magie": {
    "definition": "Carte jouable depuis la main ou posée, ayant un effet spécifique.",
    "synonymes": ["Sort", "Spell"]
  },
  "Piège": {
    "definition": "Carte activable en réponse à des actions adverses.",
    "synonymes": ["Trap"]
  },
  "Points de vie": {
    "definition": "Total de vie d’un joueur. Atteindre 0 entraîne la défaite.",
    "synonymes": ["LP", "Life Points"]
  },
  "Invocation Normale": {
    "definition": "Invocation de base autorisée une fois par tour.",
    "synonymes": ["Normal Summon"]
  },
  "Invocation Spéciale": {
    "definition": "Invocation via un effet ou condition spéciale, sans limite de nombre.",
    "synonymes": ["Special Summon"]
  },
  "Fusion": {
    "definition": "Type d'invocation spéciale en utilisant des matériaux via Polymérisation.",
    "synonymes": ["Fusion Summon"]
  },
  "Synchro": {
    "definition": "Invocation spéciale utilisant un Syntoniseur et d'autres monstres.",
    "synonymes": ["Synchro Summon"]
  },
  "XYZ": {
    "definition": "Invocation utilisant deux monstres de même niveau comme matériaux.",
    "synonymes": ["Exceed", "Xyz Summon"]
  },
  "Lien": {
    "definition": "Invocation utilisant un ou plusieurs monstres pour invoquer un monstre Lien.",
    "synonymes": ["Link Summon"]
  },
  "Main": "Cartes que le joueur tient et peut utiliser selon les règles.",
  "Phase de Pioche": "Début du tour où le joueur pioche une carte.",
  "Phase de Bataille": "Phase où le joueur peut attaquer avec ses monstres.",
  "Carte continue": "Carte Magie ou Piège dont l'effet reste actif sur le terrain.",
  "Carte rapide": {
    "definition": "Carte qui peut être activée durant le tour de l'adversaire.",
    "synonymes": ["Quick-Play"]
  },
  "Counter Trap": {
    "definition": "Carte Piège capable d'annuler des effets ou actions, la plus rapide.",
    "synonymes": ["Contre-piège"]
  },
  "Banish": {
    "definition": "Action de retirer une carte du jeu.",
    "synonymes": ["Retirer du jeu", "Remove from play"]
  },
  "OTK": {
    "definition": "Acronyme de One Turn Kill. Gagner en un seul tour.",
    "synonymes": ["One Turn Kill"]
  },
  "FTK": {
    "definition": "Acronyme de First Turn Kill. Gagner avant que l'adversaire ne joue.",
    "synonymes": ["First Turn Kill"]
  },
  "Deck de contrôle": {
    "definition": "Stratégie visant à ralentir l'adversaire et gérer le terrain.",
    "synonymes": ["Contrôle"]
  },
  "Deck combo": {
    "definition": "Deck basé sur des enchaînements de cartes puissants.",
    "synonymes": ["Combo"]
  },
  "Deck aggro": {
    "definition": "Deck orienté sur des attaques rapides et agressives.",
    "synonymes": ["Aggressif"]
  },
  "Tutor": {
    "definition": "Carte ou effet permettant de chercher une carte spécifique dans le deck.",
    "synonymes": ["Chercheur"]
  },
  "Brick": {
    "definition": "Main de départ injouable ou très mauvaise.",
    "synonymes": ["Main morte"]
  },
  "Handtrap": {
    "definition": "Carte jouable depuis la main pendant le tour adverse.",
    "synonymes": ["Interruption"]
  }



  
}
